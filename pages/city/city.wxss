.city{
  padding:0 30rpx;
}

.current{
  line-height:40rpx;
  font-size:26rpx;
  display:flex;
}

.current .icon{
  width:40rpx;
  display:flex;
  align-items:center;
}

.city-c1{
  color:#333;
}

.city-c2{
  font-size:30rpx;
}

.city-c3{
  font-size:30rpx;
  margin-top:10px;
  border-radius:5rpx;
}

.city-text{
  padding:10rpx 20rpx;
  background:#ebebeb;
}

.list{
  margin-top:25rpx;
}

.letter{
  background: #ebebeb;
  line-height:60rpx;
  text-indent:20rpx;
}

.allCitys{
  line-height:80rpx;
  font-size:30rpx;
}

.city_name{
  text-indent:20rpx;
  border-bottom:1px solid #ebebeb;
}

.fixed-letters{
  position:fixed;
  right:20rpx;
  top:50%;
  font-size:34rpx;
  color:#999;
  transform:translateY(-50%)
}

