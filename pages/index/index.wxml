<view class="wrap">
  <swiper autoplay circular class="swiper" interval="5000">
    <swiper-item wx:for="{{bannerList}}">
      <image data-value="{{bannerList}}" src="{{item}}"></image>
    </swiper-item>
  </swiper>

  <view class="info">
    <view class="location">
      <view bindtap="navigatorToCity" class="font32">
        <text hidden="{{place!=''}}">{{city.address}}</text>
        <text hidden="{{place==''}}">{{place}}</text>
      </view>
      <view  class="right" hidden="{{!isHide}}">
        <text class="daoke-icon icon-dingwei1 color"></text>
        <view class="font22">我的位置</view>
      </view>
      <view hidden="{{isHide}}">
        <text class="font22">定位中...</text>
      </view>
    </view>

    <view class="date" bindtap="navigatorToCalendar">
        <view>{{startDate}}<text class="font22">入住</text></view>
        <view class="count">共{{days}}晚</view>
        <view>{{endDate}}<text class="font22">离店</text></view>
    </view>

    <view class="person">
      <text>{{peopleNum}}</text>
      <text class="daoke-icon icon-zhixiang"></text>
    </view>

    <view bindtap="navigatorToList" class="btn-big" hoverClass="btn-big-click">查找美屋</view>

  </view>

  <view class="box">
    <view class="title">
      <view class="font32">今日推荐</view>
      <view>
        <text class="bold">{{current+1}}</text>
        <text class="font26">/{{recommendList.length}}</text>
      </view>
    </view>

    <view class="img">
      <swiper circular bindchange="bindchange" class="swiper">
        <swiper-item wx:for="{{recommendList}}" bindtap="navigatorToList">
          <image bindtap="navigatorToPhoto"  data-path="{{item.location}}" src="{{item.imageURL}}"></image>
          <view class="t1">{{item.title}}</view>
          <view class="t2">
            <text >北京市昌平区沙河</text>
            <text >￥500</text>
          </view>
        </swiper-item>
      </swiper>
    </view>
  </view>
  <view class="introdution">
    <image  src="https://pic1.ajkimg.com/display/hj/d2d4fb3bb62a358d6ec0c671358eb690/240x180m.jpg"></image>
  </view>
</view>
