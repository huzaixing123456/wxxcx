<view class="wrap">
  <view class="swiper" >
    <image data-value="{{headImg}}" src="{{headImg}}"></image>
  </view>

  <view class="info">
    <view class="location">
      <view bindtap="navigatorToCity" class="font32">
        <text>{{city.name}}</text>
      </view>
      <view  class="right">
        <text class="iconfont icon-dingwei color"></text>
        <view class="font22">我的位置</view>
      </view>
    </view>

    <view class="date" bindtap="navigatorToCalendar">
        <view>{{startDate}}<text class="font22">入住</text></view>
        <view class="count">共{{days}}晚</view>
        <view>{{endDate}}<text class="font22">离店</text></view>
    </view>

    <view class="person" bindtap='navigatorToPeople'>
      <text>{{peopleNum?peopleNum:'请选择入住人数'}}</text>
      <text class="iconfont icon-xiangyoujiantou"></text>
    </view>

    <view bindtap="navigatorToList" class="btn-big" hoverClass="btn-big-click">查找美屋</view>

  </view>

  <view class="box">
    <view class="title">热门房源</view>
    <view class="img">
      <swiper autoplay circular class="swiper">
        <swiper-item wx:for="{{rooms}}" bindtap="navigatorToList" wx:key='*this'>
          <view class="t1">北京市</view>
          <view class="t2">{{item.address}}</view>
          <image bindtap="navigatorToPhoto"  data-path="{{item.coverPic}}" src="{{item.coverPic}}"></image>
          <view class="t3">
            <text>{{item.roomName}}</text>
            <text>¥ {{item.price}}</text>
          </view>
        </swiper-item>
      </swiper>
    </view>
  </view>
  <view class="introdution">
    <image src="{{headImg}}"></image>
  </view>
</view>
