.wrap{
  text-align:center;
}

.time{
  margin-top:20rpx;
  display:inline-block;
  width: 200rpx;
  height:200rpx;
  border:3px solid #fd8238;
  border-radius:50%;
}

.time .t1{
  margin-top:50rpx;
  font-size:36rpx;
}

.time .t2{
  margin-top:10rpx;
  font-size:26rpx;
}

.text{
  font-size:26rpx;
  margin-top:50rpx;
  display:inline-block;
  padding-bottom:15rpx;
  border-bottom:1rpx solid #DDD;
}

.button{
  margin-top:50rpx;
}

.button .btn{
  display:inline-block;
  padding:5px 40rpx;
  font-size:30rpx;
  border:2rpx solid #DDD;
  margin:10rpx 50rpx;
}