<view class="img" style="background-image: url({{dataList.imgUrl}})">{{dataList.title}}</view>

<view class="wrap1">
    <view class="t1">{{dataList.title}}</view>
    <view class="font26">
        <text>入住：{{startDate}}</text>
        <text class="t2">离店：{{endDate}}</text>
        <text class="color9">共{{days}}晚</text>
    </view>
</view>
<form bindsubmit="formSubmit" reportSubmit="true">
    <view class="wrap2">
        <view class="t3">
            <text>房屋数量</text>
            <view class="choose">
              <text class='c1 color9 {{roomCount>1?"color":""}}' bindtap='chooseRoom' data-tag='0'>-</text>
              <text class='c2'>{{roomCount}} 套</text>
              <text class='c3 color' bindtap="chooseRoom" data-tag='1'>+</text>
            </view>
        </view>
        <view class="t3">
            <text>入住人数</text>
            <view class="choose">
              <text class='c1 color9 {{peopleCount>1?"color":""}}' bindtap='choosePeople' data-tag='0' data-max='10'>-</text>
              <text class='c2'>{{peopleCount}} 人{{peopleCount>=10?"+":""}}</text>
              <text class='c3 color' bindtap="choosePeople" data-tag='1' data-max='10'>+</text>
            </view>
        </view>
        <view class="t3">
            <view class="width3">
                <text>入住人</text>
            </view>
            <input bindinput="getName" placeholder="姓名"></input>
        </view>
        <view class="t3">
            <view class="width3">
                <text>手机号</text>
            </view>
            <input bindinput="getPhone" placeholder="用于接收通知"></input>
        </view>
        <view class="t3">
            <view class="width3">
                <picker bindchange="bindCardChange" range="{{cardList}}" value="{{cardIndex}}">
                    <view class="t6">
          {{cardList[cardIndex]}}<view class="icon"></view>
                    </view>
                </picker>
            </view>
            <input bindinput="getIdCard" placeholder="证件号码"></input>
        </view>
    </view>


    <view class="wrap3">
        <text>总房费：</text>
        <text class="t1">￥{{filter.toFix(price*stepper.stepper)}}</text>
        <view data-price="{{filter.toFix(price*stepper.stepper)}}">
            <text class="t2">房费明细</text>
        </view>
    </view>

    <view class="wrap4">
        <view>
            <text>待付金额：</text>
            <text class="t1">￥{{dataList.is_deposit==1?filter.toFix( price*stepper.stepper+filter.parseToInt(dataList.depositMoney) ):filter.toFix(price*stepper.stepper)}}</text>
        </view>
        <view class="t2">
            <text class="color9">住房押金：</text>
            <text class="t1 ">￥{{dataList.depositMoney}}</text>
        </view>
    </view>

    <view class="wrap5">
        <view class="item" wx:for="{{otherList}}">
            <view>
                <text class="prompt-icon daoke-icon icon-shoucang color"></text>
            </view>
            <view class="color9">
                <text>{{item}}</text>
            </view>
        </view>
    </view>

    <view class="wrap6">
        <view class="t1">
            <view class="font36 color">￥{{dataList.is_deposit==1?filter.toFix( price*stepper.stepper+filter.parseToInt(dataList.depositMoney) ):filter.toFix(price*stepper.stepper)}}</view>
            <view class="font22 color9">待付金额</view>
        </view>
        <button class="t2 {{isDisabled?'disabled':''}}" bindtap="submit" disabled="{{isDisabled}}" formType="submit" hoverClass="btnHover" style="border-radius:0px;">{{isDisabled?'正在提交中':'提交订单'}}</button>
    </view>
</form>