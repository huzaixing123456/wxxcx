.wrap{
  padding:30rpx 40rpx;
  height:100vh;
  box-sizing:border-box;
  position:relative;
}

.nav{
  height:72rpx;
  white-space:nowrap;
}

.nav .item{
  display:inline-block;
  height:68rpx;
  line-height:72rpx;
  font-size:32rpx;
  margin-right:30rpx;
  padding:0 40rpx;
  border-radius:10rpx;
  border:1rpx solid #EEE;
}

.nav .item:last-of-type{
  margin-right:0;
}

.nav .item.active{
  background: #fd8238;
  border-color: #fd8238;
  color:#FFF;
}

.content{
  margin-top:10rpx;
}

.content .item{
  width:50%;
  float:left;
  margin:20rpx 0;
  box-sizing:border-box;
}

.content .item:nth-of-type(2n+1){
  border-right:15rpx solid #FFF;
}

.content .item:nth-of-type(2n+2){
  border-left:15rpx solid #FFF;
}

.content .item .picture{
  width:100%;
  height:240rpx;
  position:relative;
}

.content .item .picture image{
  width:100%;
  height:100%;
}

.content .item .picture .title{
  position:absolute;
  left:0;
  bottom:0;
  width:100%;
  background:rgba(0,0,0,0.5);
  padding:15rpx 0;
  text-indent:10rpx;
  color:#FFF;
  font-size:24rpx;
}

.modal{
  position:absolute;
  top:0;
  left:0;
  right:0;
  bottom:0;
  background:#000;
}

.modal .title{
  text-align:center;
  color:#FFF;
  padding-top:20rpx;
  font-size:28rpx;
}

.modal .swiper{
  height:500rpx;
  width:100%;
  position:absolute;
  top:50%;
  transform:translateY(-50%);
}

.modal .swiper image{
  width:100%;
  height:100%;
}

